issn = {13541013},
journal = {Glob. Chang. Biol.},
keywords = {Abundance,Biogeography,Climate change,Forest Inventory and Analysis,Range shift,Seedling,Species distribution model,Tree migration},
number = {1},
pages = {251--264},
pmid = {24014498},
title = {{Dual impacts of climate change: Forest migration and turnover through life history}},
url = {http://doi.wiley.com/10.1111/gcb.12382},
volume = {20},
year = {2014}
