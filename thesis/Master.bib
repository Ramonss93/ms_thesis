issn = {0027-8424},
journal = {Proc. Natl. Acad. Sci.},
number = {Supplement 2},
pages = {19659--19665},
pmid = {19903876},
title = {{Bringing the Hutchinsonian niche into the 21st century: Ecological and evolutionary perspectives}},
url = {http://www.pnas.org/content/106/suppl.2/19659.abstract$\backslash$nhttp://www.pnas.org/content/106/suppl.2/19659.full.pdf},
volume = {106},
year = {2009}
}
@article{Bruno2003,
