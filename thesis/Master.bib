isbn = {1550-7424},
issn = {1550-7424},
journal = {Rangel. Ecol. Manag.},
number = {1},
pages = {1--10},
title = {{State-and-Transition Models, Thresholds, and Rangeland Health: A Synthesis of Ecological Concepts and Perspectives}},
url = {http://www.srmjournals.org/doi/abs/10.2111/1551-5028(2005)58{\textless}1:SMTARH{\textgreater}2.0.CO;2},
