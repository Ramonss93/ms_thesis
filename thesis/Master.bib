issn = {0960-2585},
journal = {Seed Sci. Res.},
number = {April},
pages = {1--12},
title = {{Assessing tree germination resilience to global warming: a manipulative experiment using sugar maple (Acer saccharum)}},
url = {http://www.journals.cambridge.org/abstract{\_}S0960258516000040},
