file = {:Users/steve/Documents/Mendeley Desktop/Svenning et al. - 2014 - The influence of interspecific interactions on species range expansion rates.pdf:pdf},
isbn = {09067590},
issn = {16000587},
journal = {Ecography (Cop.).},
