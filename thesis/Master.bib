file = {:Users/steve/Documents/Mendeley Desktop/Kissling et al. - 2012 - Towards novel approaches to modelling biotic interactions in multispecies assemblages at large spatial extents.pdf:pdf},
isbn = {1365-2699},
issn = {03050270},
journal = {J. Biogeogr.},
