file = {:Users/steve/Documents/Mendeley Desktop/Morin, Viner, Chuine - 2008 - Tree species range shifts at a continental scale new predictive insights from a process-based model.pdf:pdf},
isbn = {0022-0477},
issn = {00220477},
journal = {J. Ecol.},
keywords = {Biodiversity,Biogeography,Climate change,Extinction,Migration,Nonlinearity,North American trees,Phenology,Process-based model,Species' distribution},
number = {4},
pages = {784--794},
pmid = {18784797},
title = {{Tree species range shifts at a continental scale: New predictive insights from a process-based model}},
