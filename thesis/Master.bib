file = {:Users/steve/Documents/Mendeley Desktop/Allouche, Tsoar, Kadmon - 2006 - Assessing the accuracy of species distribution models Prevalence, kappa and the true skill statistic(2).pdf:pdf},
isbn = {0021-8901},
